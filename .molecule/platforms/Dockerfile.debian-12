FROM docker.io/debian:bookworm-slim

USER 0

RUN apt update && \
    apt install -y sudo python3 ca-certificates && \
    ln -s /usr/bin/python3 python && \
    useradd molecule -m && \
    usermod -aG sudo molecule && \
    echo 'molecule ALL=(ALL) NOPASSWD:ALL' | sudo tee /etc/sudoers.d/molecule

USER molecule
